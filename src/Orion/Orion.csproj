<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <NoWarn>NU1701</NoWarn>
        <Company>Pryaxis</Company>
        <Authors>orion-contributors</Authors>
        <RepositoryUrl>https://github.com/Pryaxis/Orion</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <NeutralLanguage>en-US</NeutralLanguage>
        <PackageProjectUrl>https://github.com/orgs/Pryaxis/teams/orion-contributors</PackageProjectUrl>
        <Description>Provides the next generation of Terraria APIs.</Description>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <DocumentationFile>bin\$(Configuration)\Orion.xml</DocumentationFile>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        <PackageLicenseFile>COPYING</PackageLicenseFile>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Ninject" Version="3.3.4" />
        <PackageReference Include="Ninject.Extensions.Factory" Version="3.3.2" />
        <PackageReference Include="Ninject.Extensions.NamedScope" Version="3.3.0" />
        <PackageReference Include="OTAPI" Version="2.0.0.32" />
        <PackageReference Include="Serilog" Version="2.8.0" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\..\COPYING">
            <Pack>True</Pack>
            <PackagePath></PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Entities\Impl\" />
      <Folder Include="Networking\Impl\" />
      <Folder Include="World\Impl\" />
    </ItemGroup>

</Project>